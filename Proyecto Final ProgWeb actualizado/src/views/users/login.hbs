<head>
    <link rel="stylesheet" href="../css/loginYregis.css" />
</head>
<section class="sign-in">
    <div class="container" style="max-height: 10px;">
        <div class="signin-content">
            <div class="signin-image">
                <figure>
                    <img src="/img/signin-image.jpg" alt="sing up image" />
                </figure>
                
            </div> <!--imagen de el sign in   y boton de crear cuenta-->


            <div class="signin-form">
                <h2 class="form-title">Iniciar Sesion</h2>
                <form method="POST" class="register-form" id="login-form">


                    <div class="form-group">
                        <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="Correo" id="your_name" placeholder="Correo" />
                    </div> <!--Input de el name o nombre-->



                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="Contraseña" id="your_pass" placeholder="Contraseña" />
                    </div> <!--Input de la contraseña-->

                    <div class="form-group">
                        <a href="/users/signup" class="signup-image-link">Registrarte</a>
                    </div> <!--La cajita de check box  para recordar remenber me-->
                    

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Entrar" />
                    </div> <!--input de el boton para sign in-->
                </form>


            </div>
        </div>
    </div>
</section>




















